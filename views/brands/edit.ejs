<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= title %>
    </title>
    <%- include('../header.ejs'); %>
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <div class="row">
        <div class="col-6">
          <% if (message) { %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% } %>

          <form action="<%= formUrl %>" method="post">
            <div class="form-group">
              <label>Brand Name</label>
              <input class="form-control" required maxlength="45" value="<%= (typeof brand == 'undefined' ? '' : brand.displayName); %>" type="text" name="displayName">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <p class="mt-3"><a href="/">‚Üê Back to brands</a></p>
        </div>
      </div>
    </div>
  </body>
</html>
